{% extends "layout.html.j2" %}
{% block title %}Arvostelut{% endblock %}
{% block page_title %}{{ name }}{% endblock %}
{% block content %}
<div class="background">
  <ul>
    {% for g in grades %}
    <li> <b>{{ g[0]}}: {{ g[1] }} tähteä</b> </li>
    {% endfor %}
    <li><b>yleisarvosana: {{ general_grade }} </b> </li>
  </ul>
</div>

<hr>
<div class="center">
  <h1>Arvostelut:</h1>
  {% for r in reviews %}
  <hr>
  <div class="background">
      <p>{{ r.content }}</p>
      {% if r.user_id == session.user_id or session.role == admin %}
      <form action="/delete_review/{{ id }}" method="POST">
        <button type="submit" name="button"> Poista </button>
        <input type="hidden" value="{{ r.id }}" name="review_id">
      </form>
      {% endif %}
  </div>
  {% endfor %}
</div>
{% endblock %}

